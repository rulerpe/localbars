<html>
  <head>
    <title>Local Bars</title>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.3/angular.min.js"></script>
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="/javascripts/angularApp.js"></script>

    <script src="/javascripts/oauth.min.js"></script>
    <script src="/javascripts/controllers/MainCtrl.js"></script>

    <script src="/javascripts/services/getBars.js"></script>


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body ng-app="localBars" ng-controller="MainController as main">
    <div class="searchBar" ng-style="{top: main.moveSearch}">
      <div class="container">
        <form class="row" ng-submit="main.findBars()">
          <div class="col-sm-3 col-sm-offset-4 form-group">
            <input type="text" class="form-control" placeholder="Where are you?" ng-model="main.location">
          </div>
          <button type="submit" class="col-sm-1 btn btn-primary">Search</button>
        </form>
      <div>
      <div class="container">
        <ul class="list-unstyled" >
          <li ng-repeat="bar in main.bars">
            <div class="row" >
              <button class="col-md-2 col-md-offset-2 btn btn-primary btn-lg" ng-click="main.signin(bar.name, $index)">{{bar.status}}</button>
              <h4 class="col-md-4 col-md-offset-1"><a href="{{bar.link}}">{{bar.name}}</a></h4>
              <h4 class="col-md-1">{{bar.visit.length}}</h4>
            </div>
          <li>
        </ul>
      </div>
    </div>
  </body>
</html>